<html>
  <head>
    
  </head>
  <body>
    <!--incluye el archivo stylesheets/application.scss para los estilos-->
     <%= render 'layouts/head' %>
     
     <nav class="navbar navbar-light bg-faded">
        <div class="navbar-brand float-xs-right">
             <%= link_to "Log in", 'login' %>
        </div>
      </nav>
    <div class="container body-content offset-md-2">
      <form>
      
        <div class="col-md-4 offset-md-0">
          <img src="<%= asset_path 'default.png'%>"  class="img-fluid button-margin img-responsive col-md-8 col-sm-5 offset-sm-3 offset-md-2">
           
          <div class="form-group">
            <textarea class="form-control" id="bio" rows="5" placeholder="Bio"></textarea>
          </div>
        </div>
        
        
         <div class="col-lg-8">
         
            <div class="form-group row offset-md-1 col-md-8">
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="fa fa-user fa-fw"></i>
                </span>             
                <input type="text" class="form-control" id="userName" placeholder="Name">
              </div>
            </div>
          <div class="clearfix"></div> 
            <div class="form-group col-md-3 offset-md-1 withoutPadding">
              <select class="form-control" id="select-gender">
                  <option>Male</option>
                  <option>Female</option> 
                  <option>Other</option>
              </select>
            </div>
            <div class="form-group col-md-5 withoutPadding">
                <select class="form-control " name ="country" id="country"></select>
                <script language="javascript">
                  populateCountries("country");
                </script>
            </div>
            
            
            <div class="clearfix"></div>  
            <div class="form-group  offset-md-1 col-md-3 withoutPadding">
                <input type="text" class="form-control" id="city" placeholder="City">
            </div>
            
            <div class="form-group col-md-5 withoutPadding">
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="fa fa-calendar fa-fw"></i>
                </span>             
                <input type="date" class="form-control" id="date" placeholder="dd/mm/yyyy">
              </div>
            </div>
         
        <div class="clearfix"></div>
        
          
          <div class="form-group col-md-8 offset-md-1 row">
            <div class="input-group">
              <span class="input-group-addon">
                <i class="fa fa-envelope fa-fw"></i>
              </span>             
              <input type="email" class="form-control octicon-mail" id="emailProfile" placeholder="Email">
            </div>
          </div>
          
          <div class="form-group row col-md-8 offset-md-1">
            <div class="input-group">
              <span class="input-group-addon">
                <i class="fa fa-mobile fa-fw"></i>
              </span>             
              <input type="number" class="form-control" id="phone" placeholder="Phone number">
            </div>
          </div>
          
            <div class="clearfix"></div>
            
          <div class="form-inline row col-md-8 offset-md-3 offset-xs-2 offset-sm-4">
           <div class="form-group">
             
            
            <button class="btn btn-secondary" action="controlPanel">
              <a href="controlPanel">Skip</a>
            </button>
            <button class="btn btn-danger" action="controlPanel">
              <a href="controlPanel" class="color-white">Save</a>
            </button>
           </div>
            
          </div>
        
      </div>

      </form> 
    </div>
  </body>
</html>