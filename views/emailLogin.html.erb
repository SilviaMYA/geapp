<html>
  <head>
    
  </head>
  <body>
    <!--incluye el archivo stylesheets/application.scss para los estilos-->
     <%= render 'layouts/head' %>
     
     <nav class="navbar navbar-light bg-faded">
        <div class="navbar-brand float-xs-right">
              <%= link_to "Log in", 'login' %>
        </div>
      </nav>
    <div class="container body-content offset-md-1">
      
    
        <div class="col-md-5 offset-md-0 hidden-xs-down hidden-sm-down">
            <img src="<%= asset_path 'fall.jpg'%>" class="img-fluid img-thumbnail">
        </div>
        
        
         <div class="col-md-6 offset-md-1">
           <h5 class="offset-xs-4 offset-sm-5 offset-md-4">Log in</h5>
          <form>
            <div class="form-group row col-md-8 offset-md-1">
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="fa fa-envelope fa-fw"></i>
                </span>             
                <input type="email" class="form-control octicon-mail" id="emailLogin" placeholder="Email">
              </div>
            </div> 
            
            <div class="form-group row col-md-8 offset-md-1">
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="fa fa-lock fa-fw"></i>
                </span>             
                <input type="password" class="form-control" id="passwordEmailLogin" placeholder="Password">
              </div>
            </div>
            
            <div class="form-group row offset-md-3 offset-sm-4 offset-xs-2">
              <div class="form-check col-md-8">
                <label class="form-check-label">
                  <input type="checkbox" class="form-check-input">
                  Remember me
                </label>
              </div>
            </div>
           
           <div class="form-group row offset-md-1">
              <div class="col-sm-12 col-md-10">
              <a href="controlPanel" class="btn btn-success col-md-10 col-sm-12 col-xs-12 color-white" role="button"> 
                  Log in
              </a>
             </div>
            </div>

            
              <div class="clearfix"> </div>

          </form>
          
          <form>
                
            <div class="form-group row offset-md-1">
              <div class="col-sm-12 col-md-10">
                <a href="signUp" class="btn btn-secondary col-md-10 col-sm-12 col-xs-12 " role="button"> 
                  Sign in
                </a>
             </div>
            </div>
          </form>
          <a href="sendPasswordMail" class="forgot-password  col-md-6 col-xs-8 offset-md-3 offset-xs-2 offset-sm-4">
                  Forgot my password
          </a>
        </div>

      
    </div>
  </body>
</html>